solution2 : String -> Int
solution2 input =
    input
        |> String.trim
        |> String.toList
        |> findStartMarker 14
        |> Maybe.withDefault -1


findStartMarker : Int -> List Char -> Maybe Int
findStartMarker requiredLength characters =
    findStartOfPacketMarkerHelper requiredLength requiredLength characters


findStartOfPacketMarkerHelper : Int -> Int -> List Char -> Maybe Int
findStartOfPacketMarkerHelper requiredLength currentIndex characters =
    let
        isValidStartSequence =
            List.take requiredLength characters
                |> Set.fromList
                |> Set.toList
                |> List.length
                |> (==) requiredLength
    in
    if isValidStartSequence then
        Just currentIndex

    else
        findStartOfPacketMarkerHelper requiredLength (currentIndex + 1) (List.drop 1 characters)


